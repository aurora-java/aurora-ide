<?xml version="1.0" encoding="UTF-8"?>
<template name="创建或修改一条数据" icon="f.png" type="create" category="创建">
	<models>
		<model id="model_detail" name="数据保存BM"/>
	</models>
	
	<form id="form" name="创建" model="model_detail" />
	
	<hbox>
		<button id="btn_save" type="save" text="保存" target="form"/>
		<button id="btn_reset" type="reset" text="重置" target="form"/>
	</hbox>
	
	
	<description><![CDATA[
		使用Form创建一条数据或者根据参数修改一条数据。
	]]></description>
</template>